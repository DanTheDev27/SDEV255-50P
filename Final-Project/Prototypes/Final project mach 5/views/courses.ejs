<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <link rel="stylesheet" href="/styles.css">
    <a href="/">Home</a>
</head>
<body>
    <h1>Select and Manage Courses</h1>
    <form action="/courses/delete" method="POST">
        <ul>
            <% courses.forEach((c, index) => { %>
                <li>
                    <%= c.teacher %>: <%= c.course %>
                    <!-- Button to delete course -->
                    <button type="submit" name="index" value="<%= index %>">Delete</button>
                        <button type="submit">Update</button>
                </li>
            <% }); %>
        </ul>
    </form>

</body>
</html>
